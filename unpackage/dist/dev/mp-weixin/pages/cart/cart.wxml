<view class="container"><block wx:if="{{cartGoods.length<=0}}"><view class="no-cart"><view class="c"><image src="../../static/images/no-cart.png"></image><text>去添加点什么吧</text></view></view></block><block wx:else><view class="cart-view"><view class="list"><view class="group-item"><view class="goods"><block wx:for="{{cartGoods}}" wx:for-item="item" wx:for-index="index" wx:key="cart_id"><view class="{{[isEditCart?'item edit':'item']}}"><view data-event-opts="{{[['tap',[['checkedItem',['$0',index],[[['cartGoods','cart_id',item.cart_id]]]]]]]}}" class="{{[item.checked?'checkbox checked':'checkbox']}}" bindtap="__e"></view><view class="cart-goods"><image class="img" src="{{item.goods_picture}}"></image><view class="info"><view class="t"><text class="name">{{item.goods_name}}</text><text class="num">{{"x"+item.num}}</text></view><view class="attr">{{(isEditCart?'已选择:':'')+item.sku_name}}</view><view class="b"><text class="price">{{"￥"+item.price}}</text><view class="selnum"><view data-event-opts="{{[['tap',[['cutNumber',['$0',index],[[['cartGoods','cart_id',item.cart_id]]]]]]]}}" class="cut" bindtap="__e">-</view><input class="number" disabled="true" type="number" value="{{item.num}}"/><view data-event-opts="{{[['tap',[['addNumber',['$0',index],[[['cartGoods','cart_id',item.cart_id]]]]]]]}}" class="add" bindtap="__e">+</view></view></view></view></view></view></block></view></view></view><view class="cart-bottom"><view data-event-opts="{{[['tap',[['checkedAll',['$event']]]]]}}" class="{{[checkedAllStatus?'checkbox checked':'checkbox']}}" bindtap="__e">{{"全选("+cartTotal.checkedGoodsCount+")"}}</view><view class="total">{{!isEditCart?'￥'+cartTotal.checkedGoodsAmount:''}}</view><view data-event-opts="{{[['tap',[['editCart',['$event']]]]]}}" class="delete" bindtap="__e">{{!isEditCart?'编辑':'完成'}}</view><block wx:if="{{isEditCart}}"><view data-event-opts="{{[['tap',[['deleteCart',['$event']]]]]}}" class="{{[cartTotal.checkedGoodsCount==0?'checkout disabled':'checkout']}}" bindtap="__e">删除所选</view></block><block wx:if="{{!isEditCart}}"><view data-event-opts="{{[['tap',[['checkoutOrder',['$event']]]]]}}" class="{{[cartTotal.checkedGoodsCount==0?'checkout disabled':'checkout']}}" bindtap="__e">下单</view></block></view></view></block></view>