.hot{
	width: 100%;
	height: auto;
	overflow: hidden;
	position: relative;
	background: #fff;
	padding: 30rpx 0;
}
.hot_title{
	height: 80rpx;
	line-height: 80rpx;
	padding: 0 30rpx;
	color: red;
	font-size: 32rpx;
	font-weight: bold;
}
.hot .hot-item{
	float: left;
	width: 50%;
	margin-bottom: 20rpx;
	text-align: center;
}
.hot .hot-item .img{
	border-radius: 6rpx;
	width: 302rpx;
	height: 302rpx;
}
.hot .hot-item .right{
	text-align: left;
	margin-left: 32rpx;
}
.hot .hot-item .right .name{
	width: 94%;
	text-align: left;
	display: -webkit-box;
	overflow: hidden;
	font-size: 30rpx;
	color: #333;
	line-height: 40rpx;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.hot .hot-item .right .desc{
	width: 94%;
	  display: block;
	  color: #999;
	  line-height: 40rpx;
	  height: 40rpx;
	  overflow: hidden;
	  -o-text-overflow: ellipsis;
	     text-overflow: ellipsis;
	  white-space: nowrap;
	  font-size: 25rpx;
}
.hot .hot-item .right .price{
	display: block;
	line-height: 30rpx;
	font-size: 30rpx;
	color: #ec544f;
}

