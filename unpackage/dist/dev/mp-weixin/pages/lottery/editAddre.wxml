<view class="container"><view class="add-address"><view class="add-form"><view class="form-item"><input class="input" placeholder="姓名" auto-focus data-event-opts="{{[['input',[['bindinputName',['$event']]]]]}}" value="{{address.consignee}}" bindinput="__e"/></view><view class="form-item"><input class="input" maxlength="11" placeholder="手机号码" data-event-opts="{{[['input',[['bindinputMobile',['$event']]]]]}}" value="{{address.mobile}}" bindinput="__e"/></view><view class="form-item"><input class="input" disabled="true" placeholder="省份" data-event-opts="{{[['tap',[['chooseRegion',[1]]]]]}}" value="{{province_name}}" bindtap="__e"/></view><view class="form-item"><input class="input" disabled="true" placeholder="城市" data-event-opts="{{[['tap',[['chooseRegion',[2]]]]]}}" value="{{city_name}}" bindtap="__e"/></view><view class="form-item"><input class="input" disabled="true" placeholder="区域" data-event-opts="{{[['tap',[['chooseRegion',[3]]]]]}}" value="{{district_name}}" bindtap="__e"/></view><view class="form-item"><input class="input" placeholder="详细地址, 如街道、楼盘号等" data-event-opts="{{[['input',[['bindinputAddress',['$event']]]]]}}" value="{{address.street}}" bindinput="__e"/></view><block wx:if="{{del_id>0}}"><view class="form-default"><text data-event-opts="{{[['tap',[['bindIsDel',['$event']]]]]}}" bindtap="__e">删除收货地址</text></view></block></view><view class="btns"><button data-event-opts="{{[['tap',[['cancelAddress',['$event']]]]]}}" class="cannel" bindtap="__e">取消</button><button data-event-opts="{{[['tap',[['saveAddress',['$event']]]]]}}" class="save" bindtap="__e">保存</button></view><block wx:if="{{openSelectRegion}}"><view class="region-select"><view class="hd"><view class="region-selected"><view class="item disabled">{{title_name}}</view></view><view data-event-opts="{{[['tap',[['doneSelectRegion',['$event']]]]]}}" class="done" bindtap="__e">确定</view></view><view class="bd"><scroll-view class="region-list" style="height:490rpx;" scroll-y="true"><block wx:for="{{regionList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['selectRegion',['$0',index],[[['regionList','id',item.id]]]]]]]}}" class="{{[item.selected?'item selected':'item']}}" bindtap="__e">{{item.name}}</view></block></scroll-view></view></view></block></view><block wx:if="{{openSelectRegion}}"><view data-event-opts="{{[['tap',[['cancelSelectRegion',['$event']]]]]}}" class="bg-mask" bindtap="__e"></view></block></view>